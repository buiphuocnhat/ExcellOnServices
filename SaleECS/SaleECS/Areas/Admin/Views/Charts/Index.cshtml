
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Charts
}

<div class="jumbotron">
    <div id="container" style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto"></div>
</div>

<table id="ordTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Code</th>
            <th>Service Name</th>
            <th>Price</th>
        </tr>
    </thead>
</table>

<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />


@section scripts{
    <script>
        $(document).ready(function () {
            $.getJSON("/Charts/GetData", function (data) {



                Highcharts.chart('container', {
                    chart: {
                        plotBackgroundColor: null,
                        plotBorderWidth: null,
                        plotShadow: false,
                        type: 'pie'
                    },
                    title: {
                        text: 'Chart Services'
                    },
                    tooltip: {
                        pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
                    },
                    plotOptions: {
                        pie: {
                            allowPointSelect: true,
                            cursor: 'pointer',
                            dataLabels: {
                                enabled: true,
                                format: '<b>{point.name}</b>: {point.percentage:.1f} %',
                                style: {
                                    color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                                }
                            }
                        }
                    },
                    series: [{
                        name: 'Brands',
                        colorByPoint: true,
                        data: [{
                            name: 'In-bound Services',
                            y: data.Inbound
                        }, {
                            name: 'Out-bound Services',
                            y: data.Outbound
                        }, {
                            name: 'Tele Marketing Services',
                            y: data.Tele
                        }]
                    }]
                });
            });
        });
    </script>

    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script>
    var Popup, dataTable;

        $(document).ready(function () {

        dataTable = $("#ordTable").DataTable(
                {
                    "ajax": {
                        "url": "/OrderServiceDetails/GetList",
                        "type": "GET",
                        "datatype": "json"
                },
                    "columns": [
                        { "data": "Code" },
                        { "data": "ServiceName" },
                       { "data": "Price" },
                    ],
            });

        });

    function PopupForm(url)
    {

            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response)
                {
                    formDiv.html(response);
                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: 'Fill Order Order Service Detail Detail',
                        height: 500,
                        width: 700,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                });
    }

    function Delete(id)
    {
        if (confirm('Are You Sure to Delete this Orde Service Details Record ?'))
        {
            $.ajax({
                type: "POST",
                url: '@Url.Action("Delete","OrderServiceDetails")/' + id,
                success: function (data)
                {
                    dataTable.ajax.reload();
                    alert('Delete success')
                }
            });
        }
    }


    </script>
    <script src="~/Scripts/chart/highcharts.js"></script>
    <script src="~/Scripts/chart/exporting.js"></script>
}